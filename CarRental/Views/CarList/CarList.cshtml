@model List<CarRental.Models.Entites.Car>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Car List";
}

<h2>Car List</h2>

<form method="get" action="@Url.Action("AddCar", "CarList", new {area = "Admin"})" style="display:inline;">
    <button type="submit" class="btn btn-success">+ Add Car</button>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Seaters</th>
            <th>Rental Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td> <img src="~/images/carlist/@car.ImageUrl" alt="@car.Model"
                         style="width: 80px; height: auto; border-radius: 5px;"/>
                </td>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.Seaters</td>
                <td>₱@car.RentalPrice</td>
                <td>@car.Status</td>
                <td>
                    <form action="@Url.Action("EditCar", "CarList", new {area = "Admin"})" method="get" style="display:inline;">
                        <input type="hidden" name="id" value="@car.CarId" />
                        <button type="submit" class="btn btn-warning">✏️ Edit</button>
                    </form>

                    <!-- Delete Car (Uses POST for safety) -->
                    <form method="post" action="@Url.Action("DeleteCar","CarList", new {AreaAttribute= "Admin"})" style="display:inline;">
                        <input type="hidden" name="id" value="@car.CarId" />
                        <button type="submit" class="btn btn-danger">🗑 Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
