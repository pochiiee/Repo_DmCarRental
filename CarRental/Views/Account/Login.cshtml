@model CarRental.Models.ViewModels.LoginViewModel


@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Rental</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>

    <header>
        <nav class="navbar">
            <a href="#" class="nav-logo">
                <img src="~/images/dmlogo.png" alt="DM Car Rental Logo">
            </a>
            <button id="menu-close-button" class="fas fa-times"></button>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">Home</a>
                </li>

                <li class="nav-item">
                    <a href="/Home/Index#about" class="nav-link">About Us</a>
                </li>

                <li class="nav-item">
                    <a href="/Home/Index#viewCars" class="nav-link">View Cars</a>
                </li>

                <li class="nav-item">
                    <a href="/Home/Index#contact" class="nav-link">Contact</a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Login" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Login" && ViewContext.RouteData.Values["Controller"].ToString() == "Account" ? "active" : "")">Login</a>
                </li>

                <div class="line">
                    <img src="~/images/line.png" alt="Line Image">
                </div>
            </ul>

            <button id="menu-open-button" class="fas fa-bars"></button>
        </nav>
    </header>

    <main class="main-content">
        <div class="left-section">
            <h2>DM Online Car Rental</h2>
            <button>Learn More</button>
            <img src="~/images/car.png" alt="Red Car">
        </div>

        <div class="right-section">
            <div class="login-box">
                <h2>Login</h2>
                <form asp-action="Login" method="post">
                    <div>
                        <input asp-for="UsernameOrEmail" type="text" placeholder="Username or Email" required>
                        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                    </div>

                    <div>
                        <input asp-for="Password" type="password" placeholder="Password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit">Login</button>

                    <p class="forgot-password">
                        <a asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a>
                    </p>
                </form>

                <p class="signup-text">
                    Don’t have an account?
                    <a asp-controller="Account" asp-action="Signup">Sign Up</a>
                </p>

                @if (!ViewData.ModelState.IsValid)
                {
                    <p class="text-danger">Invalid username/email or password.</p>
                }
            </div>
        </div>
    </main>

    <script src="~/js/script.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
