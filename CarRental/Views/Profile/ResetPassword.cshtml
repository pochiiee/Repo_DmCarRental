@{
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

<link href="~/css/customer/profile.css" rel="stylesheet" />

<!--PASSWORD SETTINGS PAGE-->
<div class="container">
    <!-- PROFILE SETTINGS SIDEBAR -->
    <aside class="account-sidebar">
        <h2 class="sidebar-header">Account Settings</h2>
        <ul>
            <li class="@(Context.Request.Path == "/Profile/Password" ? "active" : "")">
                <a asp-controller="Profile" asp-action="Password" asp-route-area="Guest" class="nav-link">
                    <i class="icon">🔒</i> Password
                </a>
            </li>

        </ul>
    </aside>

    <!-- PASSWORD SETTINGS SECTION -->
    <section id="password-settings" class="password-settings">
        <form method="post" action="/Profile/UpdatePassword" class="profile-form">
            <div class="form-group">
                <label for="CurrentPassword">Current Password<span class="text-danger">*</span></label>
                <input type="password" id="CurrentPassword" name="CurrentPassword" class="form-control" placeholder="Current Password" required />
            </div>
            <div class="form-group">
                <label for="NewPassword">New Password<span class="text-danger">*</span></label>
                <input type="password" id="NewPassword" name="NewPassword" class="form-control" placeholder="New Password" required />
            </div>
            <div class="form-group">
                <label for="ConfirmPassword">Re-type New Password<span class="text-danger">*</span></label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Re-type New Password" required />
            </div>

            <!-- Save Button -->
            <div class="button-container">
                <button type="submit" class="save-btn">Save Changes</button>
            </div>
        </form>
    </section>
</div>
