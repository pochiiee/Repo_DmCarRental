@model CarRental.Models.Entites.Car

<h2>Delete Car</h2>
<p>Are you sure you want to delete this car?</p>

<ul>
    <li><strong>Brand:</strong> @Model.Brand</li>
    <li><strong>Model:</strong> @Model.Model</li>
    <li><strong>Seaters:</strong> @Model.Seaters</li>
    <li><strong>Rental Price:</strong> ₱@Model.RentalPrice</li>
    <li><strong>Status:</strong> @Model.Status</li>
</ul>

<form method="post" action="@Url.Action("DeleteCarConfirmed", "CarList", new {area = "Admin"})">
    <input type="hidden" name="id" value="@Model.CarId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("CarList", "CarList")" class="btn btn-secondary">Cancel</a>
</form>