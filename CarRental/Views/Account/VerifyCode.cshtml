@{
    Layout = null;
    ViewData["Title"] = "Verify Code";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Rental</title>
     <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/verifycode.css" />
</head>
<body>

    <
    <header>
        <nav class="navbar">
            <a href="#" class="nav-logo">
                <img src="~/images/dmlogo.png" alt="DM Car Rental Logo">
            </a>

            <button id="menu-close-button" class="fas fa-times"></button>
            <ul class="nav-menu">
                <li class="nav-item"><a asp-controller="/Home" asp-action="Index" class="nav-link">Home</a></li>
                <li class="nav-item"><a href="/Home/Index#about" class="nav-link">About Us</a></li>
                <li class="nav-item"><a href="/Home/Index#viewCars" class="nav-link">View Cars</a></li>
                <li class="nav-item"><a href="/Home/Index#contact" class="nav-link">Contact</a></li>
                <li class="nav-item"><a asp-controller="Account" asp-action="Login" class="nav-link">Login</a></li>

                <div class="line">
                    <img src="~/images/line.png" alt="Line Image">
                </div>
            </ul>
            <button id="menu-open-button" class="fas fa-bars"></button>

        </nav>
    </header>

    <main class="main-content">
        <div class="left-section">
            <h2>DM Online Car Rental</h2>
            <button>Learn More</button>
            <img src="~/images/car.png" alt="Red Car">
        </div>

        <div class="right-section">
            <div class="login-box">
                <h2>Verify Code</h2>
                <p class="verify-code-info">
                    Please enter the verification code sent to your email.
                </p>
                <form asp-action="VerifyCode" method="post">
                    <input type="hidden" name="email" value="@TempData["Email"]" />
                    <div class="form-group">
                        <label for="code">VERIFICATION CODE</label>
                        <input type="text" name="code" placeholder="Enter verification code" required>
                    </div>
                    <button type="submit">VERIFY</button>
                </form>

                @if (ViewBag.ErrorMessage != null)
                {
                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                }
                @if (ViewBag.SuccessMessage != null)
                {
                    <p class="text-success">@ViewBag.SuccessMessage</p>
                }

                <!-- ✅ RESEND CODE - HIDDEN INITIALLY -->
                <p id="resend-text" style="display: none;">
                    Didn't receive the code? <a href="#" id="resend-code" class="resend-link">Resend Code</a>
                </p>
                <p id="countdown">Resend available in <span id="timer">60</span> seconds.</p>

            </div>
        </div>
    </main>

    <script src="~/js/script.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

</body>
</html>
