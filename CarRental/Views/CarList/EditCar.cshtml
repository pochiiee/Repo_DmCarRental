@model CarRental.Models.Entites.Car

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Edit Car";
}

<link href="~/css/admin/EditCars.css" rel="stylesheet" />

<h2 class="text-center">Edit Car</h2>

<div class="container">
    <div class="edit-card">
        <div class="edit-card-body">
            <form method="post" asp-action="EditCar">
                <input type="hidden" asp-for="CarId" />

                <div class="form-group">
                    <label class="form-label">Brand</label>
                    <input type="text" asp-for="Brand" class="form-input" required />
                </div>

                <div class="form-group">
                    <label class="form-label">Model</label>
                    <input type="text" asp-for="Model" class="form-input" required />
                </div>

                <div class="form-group">
                    <label class="form-label">Seaters</label>
                    <input type="number" asp-for="Seaters" class="form-input" required />
                </div>

                <div class="form-group">
                    <label class="form-label">Rental Price</label>
                    <input type="number" asp-for="RentalPrice" class="form-input" required />
                </div>

                <div class="form-group">
                    <label class="form-label">Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Available">Available</option>
                        <option value="Rented">Rented</option>
                    </select>
                </div>

                <div class="button-group">
                    <button type="submit" class="btn-save">✔ Save</button>
                    <a href="@Url.Action("CarList", "CarList")" class="btn-cancel">✖ Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>